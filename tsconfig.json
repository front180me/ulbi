{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    //  esModuleInterop allows import for common js packets
    "esModuleInterop": true,
    // with "allowSyntheticDefaultImports" of true we can make
    // import when some library does not have default import (instead of 'import * as ...')
    "allowSyntheticDefaultImports": true,
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}